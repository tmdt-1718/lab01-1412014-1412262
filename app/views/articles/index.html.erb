<div class="col-md-12"><h1>Articles</h1></div>

<div class="row">
	<div class="col-md-12">
		<% if flash[:success] %>
		<div class="alert alert-warning alert-dismissible fade show" role="alert">
		  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
		    <span aria-hidden="true">&times;</span>
		  </button>
		  <p><%= flash[:success] %></p>
		</div>
		<% end %>
	</div>
</div>


<div class="col-md-12">
<div class="list-group">

	<% @articles.each do |article| %>

	<a href="<%= article_path(article)%>" onmouseover="this.style.background='#F8F9F2';"  onmouseout="this.style.background='white';" class="list-group-item flex-column align-items-start">
		<div class="d-flex justify-content-start">
			<div class="col-md-3">
			<%= image_tag(article.urlImage,  alt: "like", :style => "width:100px;height:100px;" ) %>
			</div>
			<div class="flex-column">
				<span style="font-size: 25px;color: black;"><%=article.title%> <span style="height: 20px;line-height:5px;" class="badge badge-secondary badge-pill"> <%=article.view%></span></span><br>
				
				<span style="font-size: 14px;color: black;"><i>Created By <%=article.user.name%><i></span>
			</div>
			
		</div>
			
	</a>
	<% end %>

</div>
</div>
<div class="col-md-12"><%= link_to 'New article', new_article_path %></div>
